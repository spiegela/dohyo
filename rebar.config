{ erl_opts, [fail_on_warning, debug_info] }.
{ cover_enabled, true }.
{ clean_files, ["*.eunit", "ebin/*.beam"] }.
{ eunit_opts, [ verbose,
                {report, {eunit_surefire, [{dir, "."}]}}
              ] }.
{ deps, [ { mixer,
            ".*",
            {git, "https://github.com/spiegela/mixer.git", {branch, "master"}}
          },
          { sumo_sql_extra,
            ".*",
            { git, "https://github.com/spiegela/sumo_db-sql-extras.git",
              {branch, "master"}
            }
          },
          { sumo_db,
            ".*",
            {git, "https://github.com/inaka/sumo_db.git", {tag, "0.3.0"}}
          },
          { proper,
            ".*",
            {git, "https://github.com/manopapad/proper", {tag, "v1.1"}}
          },
          { meck,
            ".*",
            {git, "https://github.com/eproxus/meck.git", {tag, "0.8.2"}}
          }
        ]
}.
